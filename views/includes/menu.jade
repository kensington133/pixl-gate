div.contain-to-grid
	nav(class="top-bar" data-topbar role="navigation")
		ul(class="title-area")
			li(class="name")
				h1: a(href="/") Home
			li(class="toggle-topbar menu-icon"): a(href="#"): span Menu

		section(class="top-bar-section")
			ul(class="right")
				li(class="has-form")
					if loggedIn
						a(href="/logout" class="button radius") Logout
					else
						a(href="/login" class="button radius") Login
				li: a(href="/register") Register
				li(class="has-dropdown")
					a(href="#") Right Button Dropdown
					ul(class="dropdown")
						li: a(href="#") First link in dropdown
						li(class="active"): a(href="#") Active link in dropdown